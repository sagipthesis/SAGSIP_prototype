<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <size
                android:height="245dp"
                android:width="245dp"/>
            <corners android:radius="1000dp" />
            <solid android:color="@color/backgroundRed" />
            <stroke android:color="@color/backgroundRed" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size
                android:height="245dp"
                android:width="245dp"/>
            <corners android:radius="1000dp" />
            <solid android:color="@color/secondaryRed" />
            <stroke android:color="@color/secondaryRed" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>